<form action="/create" method="POST">
  <h2>Заказать звонок</h2>
  <div class="registration-cssave">
    <label>Имя</label>
            <input class="form-control item" type="text" name="userlastname" maxlength="20" minlength="4" pattern="^[a-zA-Z0-9_.-]*$" id="userlastname" placeholder="Имя" required>
        </div>
        <div class="form-group">
          <label>Номер телефона</label>
            <input class="form-control item" type="tel" name="number" maxlength="12" minlength="8" pattern="+7[0-9]{3}-[0-9]{3}-[0-9]{2}[0-9]{2}" id="number" placeholder="+7(ххх)-ххх-хх-хх" required>
        </div>

  <button type="submit" class="btn btn-primary btn-block registration">Отправить</button>
</form>
